<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/bg_missing_sticker"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/albumName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_margin="4dp"
        android:padding="12dp"
        android:fontFamily="@font/beau_sans_pro_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/albumStats"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activeAlbum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:fontFamily="@font/beau_sans_pro_regular"
        android:text="@string/active_album"
        android:paddingStart="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/albumName"
        app:layout_constraintStart_toStartOf="@id/albumName"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/albumStats"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_margin="4dp"
        android:gravity="center"
        android:padding="12dp"
        android:fontFamily="@font/beau_sans_pro_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>