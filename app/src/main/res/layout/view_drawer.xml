<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currentStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/beau_sans_pro_regular"
        android:layout_marginTop="68dp"
        android:layout_marginStart="@dimen/margin_start_drawer"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/headerView"
        app:layout_constraintStart_toStartOf="@id/headerView"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currentStatsNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/beau_sans_pro_regular"
        android:layout_marginStart="@dimen/margin_start_drawer"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/currentStats"
        app:layout_constraintStart_toStartOf="@id/headerView"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currentStatsPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60%"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/beau_sans_pro_regular"
        android:layout_marginStart="@dimen/margin_start_drawer"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/currentStatsNumbers"/>


    <LinearLayout
        android:id="@+id/menuHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerView">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/filterBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by:"
            android:fontFamily="@font/beau_sans_pro_regular"
            android:layout_marginTop="12dp"
            android:layout_marginStart="@dimen/margin_start_drawer"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/margin_start_drawer"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/allRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/beau_sans_pro_regular"
                android:text="All" />

            <RadioButton
                android:id="@+id/missingRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/beau_sans_pro_regular"
                android:text="Missing" />

            <RadioButton
                android:id="@+id/swapsRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/beau_sans_pro_regular"
                android:text="Swaps" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/importStickers"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="@dimen/margin_start_drawer"
            android:text="Import Stickers"
            android:fontFamily="@font/beau_sans_pro_regular"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/exportStickers"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Export Stickers"
            android:fontFamily="@font/beau_sans_pro_regular"
            android:layout_marginStart="@dimen/margin_start_drawer"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="About"
            android:fontFamily="@font/beau_sans_pro_regular"
            android:layout_marginStart="@dimen/margin_start_drawer"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Share App"
            android:fontFamily="@font/beau_sans_pro_regular"
            android:layout_marginStart="@dimen/margin_start_drawer"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/restoreAlbum"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/beau_sans_pro_regular"
            android:text="Restore All Stickers"
            android:layout_marginStart="@dimen/margin_start_drawer"
            android:gravity="center_vertical"
            android:textColor="@color/destructive_text_color"
            android:textSize="16sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>